
<h1> All our Flats </h1>

<div class="cards">
    <% @flats.each do |flat| %>
  <div class="card">
    <div class="card-info">
      <h4> <%= flat.name %> </h4>
      <p> <%= flat.address %> </p>
    </div>
    <div class="div-price-number">
      <ul class="price-number">
        <li> <%= flat.price_per_night %>â‚¬</li>
        <li> <%= flat.number_of_guests %> </li>
      </ul>
    </div>
    <div class="card-links">
      <h5> <%= link_to "More info", flat_path(flat) %> <h5>
    </div>
  </div>
  <% end %>
</div>
